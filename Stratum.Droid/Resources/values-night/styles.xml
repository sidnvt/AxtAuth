<resources>
    <style name="OverlayBlack">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorSurface">@android:color/black</item>
        <item name="colorSurfaceVariant">@android:color/black</item>
        <item name="colorSurfaceContainer">@android:color/black</item>
        <item name="colorSurfaceContainerLow">@android:color/black</item>
        <item name="colorSurfaceContainerHigh">@android:color/black</item>
        <item name="colorSurfaceContainerLowest">@android:color/black</item>
        <item name="colorSurfaceContainerHighest">@android:color/black</item>
        <item name="cardStyle">@style/CardStyle.Black</item>
        <item name="appBarLayoutStyle">@style/AppBarLayoutStyle.Black</item>
        <item name="bottomAppBarStyle">@style/BottomAppBarStyle.Black</item>
        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog.Black</item>
        <item name="progressIndicatorStyle">@style/ProgressIndicatorStyle.Black</item>
    </style>

    <style name="CardStyle.Black" parent="Widget.Material3.CardView.Outlined"/>

    <style name="AppBarLayoutStyle.Black" parent="Widget.Material3.AppBarLayout">
        <item name="liftOnScrollColor">@android:color/black</item>
    </style>

    <style name="BottomAppBarStyle.Black" parent="Widget.Material3.BottomAppBar">
        <item name="elevation">0dp</item>
    </style>

    <style name="ModalBottomSheetDialog.Black" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet.Black</item>
    </style>

    <style name="ModalBottomSheet.Black" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="ProgressIndicatorStyle.Black" parent="Widget.Material3.LinearProgressIndicator">
        <item name="trackThickness">3dp</item>
    </style>
</resources>
